{
  "name": "the-raytracer-challenge-repl",
  "version": "0.9.0",
  "private": true,
  "scripts": {
    "build": "npm run clean:web && npm run build:wasm && npm run build:web",
    "build:web": "scripts/create-build-info.sh >build.info.json && rollup -c; rm build.info.json||true",
    "build:wasm": "pushd rust && wasm-pack build --release --target web --out-name raytracer && wasm-opt -O3 -o pkg/out.wasm pkg/raytracer_bg.wasm && mv pkg/out.wasm pkg/raytracer_bg.wasm && popd",
    "dev": "npm run build:wasm && scripts/create-build-info.sh >build.info.json && trap \"rm build.info.json||true\" EXIT ERR && rollup -c -w",
    "start": "sirv public --no-clear",
    "check": "svelte-check --tsconfig ./tsconfig.json",
    "clean:web": "rm -rf public/build 2>/dev/null || true; rm public/sw.js 2>/dev/null || true; rm public/sw.js.map 2>/dev/null || true",
    "clean:rust": "pushd rust && cargo clean && popd",
    "clean": "npm run clean:rust; npm run clean:web; rm build.info.json 2>/dev/null||true",
    "release:website": "./scripts/release-website.sh"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^21.0.1",
    "@rollup/plugin-json": "^4.1.0",
    "@rollup/plugin-node-resolve": "^13.1.3",
    "@rollup/plugin-replace": "^3.0.1",
    "@rollup/plugin-typescript": "^8.3.0",
    "@rollup/plugin-wasm": "^5.1.2",
    "@tsconfig/svelte": "^3.0.0",
    "@types/codemirror": "^5.60.5",
    "postcss": "^8.4.5",
    "postcss-variable-compress": "^0.2.5",
    "rollup": "^2.63.0",
    "rollup-plugin-hypothetical": "^2.1.1",
    "rollup-plugin-livereload": "^2.0.5",
    "rollup-plugin-multi-input": "^1.3.1",
    "rollup-plugin-postcss": "^4.0.2",
    "rollup-plugin-string": "^3.0.0",
    "rollup-plugin-svelte": "^7.1.0",
    "rollup-plugin-terser": "^7.0.2",
    "rollup-plugin-visualizer": "^5.5.2",
    "rollup-plugin-workbox": "^6.2.0",
    "svelte": "^3.44.3",
    "svelte-check": "^2.2.11",
    "svelte-preprocess": "^4.10.1",
    "tslib": "^2.3.1",
    "typescript": "^4.5.4"
  },
  "dependencies": {
    "@floating-ui/dom": "^0.1.10",
    "@kahi-ui/framework": "^0.5.2",
    "codemirror": "^5.65.0",
    "codemirror-one-dark-theme": "^1.1.1",
    "comlink": "^4.3.1",
    "sirv-cli": "^2.0.1",
    "svelte-lucide-icons": "^0.1.5"
  }
}
